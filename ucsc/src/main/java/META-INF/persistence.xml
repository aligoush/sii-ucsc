<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="ucsc" transaction-type="RESOURCE_LOCAL">
		<class>com.ucsc.entities.Usuario</class>
		<class>com.ucsc.entities.Solicitud</class>
		<class>com.ucsc.entities.Valoracion</class>
		<class>com.ucsc.entities.Actividad</class>
		<class>com.ucsc.entities.Notificacion</class>
		<class>com.ucsc.entities.Proyecto</class>
		<class>com.ucsc.entities.Matriculacion</class>
		<class>com.ucsc.entities.Titulacion</class>
		<class>com.ucsc.entities.Evaluacion</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sii"/>
			<property name="javax.persistence.jdbc.user" value="siiuser"/>
			<property name="javax.persistence.jdbc.password" value="siipassword"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="eclipselink.jdbc.batch-writing" value="JDBC"/>
		</properties>
	</persistence-unit>
</persistence>
